<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background">

    <com.app.makeapp.ui.categories.view.ToolbarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:id="@+id/oldPass"
                android:background="@color/loginEditTextsColor"
                android:paddingLeft="10dp"
                android:hint="@string/reset.pass.old"
                android:layout_marginTop="50dp"
                android:inputType="textEmailAddress" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:id="@+id/newPass"
                android:background="@color/loginEditTextsColor"
                android:paddingLeft="10dp"
                android:hint="@string/reset.pass.new"
                android:inputType="textEmailAddress"
                android:layout_marginTop="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:id="@+id/repeatPass"
                android:background="@color/loginEditTextsColor"
                android:paddingLeft="10dp"
                android:hint="@string/reset.pass.repeat"
                android:layout_marginTop="20dp"
                android:inputType="textEmailAddress" />

            <Button
                android:text="@string/forgot.send"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/sendButton"
                android:elevation="21dp"
                android:background="@color/loginButtonColor"
                android:layout_marginTop="20dp"
                android:onClick="onSendClick" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
